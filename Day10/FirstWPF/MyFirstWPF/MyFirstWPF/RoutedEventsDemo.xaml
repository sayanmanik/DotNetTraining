<Window x:Class="MyFirstWPF.RoutedEventsDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstWPF"
        mc:Ignorable="d"
        Title="RoutedEventsDemo" Height="450" Width="800" MouseDown="Window_MouseDown">
    <Grid MouseDown="Grid_MouseDown">
        <StackPanel MouseDown="StackPanel_MouseDown">
            <ListBox x:Name="lstItems"></ListBox>
            <Button x:Name="btnClick" Content="MouseDown" MouseDown="btnClick_MouseDown" PreviewMouseDown="btnClick_PreviewMouseDown"></Button>
        </StackPanel>

        <!--<StackPanel MouseDown="StackPanel_MouseDown">
            <ListBox x:Name="lstItems"></ListBox>
            <Button x:Name="btnClick" Content="MouseDown" MouseDown="btnClick_MouseDown"></Button>
        </StackPanel>-->



    </Grid>
</Window>
