<Window x:Class="MyFirstWPF.DataBinding1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstWPF"
        mc:Ignorable="d"
        Title="DataBinding1" Height="450" Width="800">
    <StackPanel>
        <Slider x:Name="slider1" Value="20" Minimum="1" Maximum="100"/>
        <TextBox x:Name="txt1" FontSize="{Binding ElementName=slider1, Path=Value, Mode=TwoWay}" Text="Accenture"></TextBox>
        <!--<TextBox x:Name="txt1" FontSize="{Binding ElementName=slider1, Path=Value}" Text="Accenture"></TextBox>-->
        <Button  x:Name="btn1" Click="Button_Click"  Content="Change"></Button>
    </StackPanel>
</Window>
