<Window x:Class="MyFirstWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstWPF"
        mc:Ignorable="d"
        Title="AccentureApp" Height="450" Width="800">
    <Grid>
        <!--<Label x:Name="lblmsg" Content="My First WPF Window"></Label>-->
       
         <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label x:Name="lblName" Content="Enter User Name"></Label>
        <TextBox x:Name="txtName" Width="100" Grid.Row="0" Grid.Column="1"></TextBox>
        <Label x:Name="lblPwd" Content="Enter Password" Grid.Row="1" Grid.Column="0"></Label>
        <TextBox x:Name="txtPwd" Width="100" Grid.Row="1" Grid.Column="3"></TextBox>
        <!--<Label x:Name="lblEmail" Content="Enter Email" Grid.Row="2" Grid.Column="0"></Label>
        <TextBox x:Name="txtEmail" Width="100" Grid.Row="2" Grid.Column="2"></TextBox>-->


    </Grid>
</Window>
